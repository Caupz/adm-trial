@model ADMTrial.Models.ProductList

@{
    ViewBag.Title = "List of Products";
}

<h2>List</h2>

<div class="sort-container">
    <select>
        <option></option>
        <option>Price</option>
        <option>Popularity</option>
    </select>

    <a href="#sort-asc">ASC</a>
    /
    <a href="#sort-desc">DESC</a>
</div>

<table class="table">

    @foreach (var item in Model.ProductModels)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Image)
        </td>
        <td>
            <p>@Html.DisplayFor(modelItem => item.Title)</p>
            <p>@Html.DisplayFor(modelItem => item.DescriptionWithId)</p>
            @Html.ActionLink("More Details", "Details", new { id = item.Id }, new { @class = "btn btn-default" })
        </td>
        <td>
        </td>
        <td>
            <div>
                <div>Price: </div>
                <div>@Html.DisplayFor(modelItem => item.Price) EUR</div>
            </div>
            <div>
                <div>Availability: </div>
                <div>@Html.DisplayFor(modelItem => item.Availability)</div>
            </div>
        </td>
    </tr>
    }

</table>
